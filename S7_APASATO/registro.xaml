<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7_APASATO.registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="REGISTRESE" FontSize="20" 
                   TextColor="Black" HorizontalTextAlignment="Center"/>

            <Label Text="Nombre:" TextColor="Black" FontSize="15" HorizontalTextAlignment="Start"/>
            <Entry x:Name="lblnombre" Placeholder="Introduzca su Nombre" />

            <Label Text="Usuario:" TextColor="Black" FontSize="15" HorizontalTextAlignment="Start"/>
            <Entry x:Name="lblusuario" Placeholder="Introduzca su Usuario" />

            <Label Text="Password:" TextColor="Black" FontSize="15" HorizontalTextAlignment="Start"/>
            <Entry x:Name="lblpassword" Placeholder="Introduzca su Password" IsPassword="True" />

            <Button x:Name="btnagregar" Text="AGREGAR"  Clicked="btnagregar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>